<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userName"
            type="com.example.holyquran.data.model.UserInfo" />
        <variable
            name="transaction"
            type="com.example.holyquran.data.model.Transaction" />

        <variable
            name="increaseMoneyViewModel"
            type="com.example.holyquran.ui.increaseMoney.IncreaseMoneyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layoutDirection="ltr"

        android:layout_marginRight="30dp"
        android:orientation="vertical"
        tools:context=".ui.userList.decreaseMoney.IncreaseMoneyFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{userName.fullName}"
                android:textColor="@color/black"
                android:textSize="35sp"
                tools:text="UserName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{userName.mobileNumber}"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="UserName" />
            <TextView
              android:id="@+id/totalMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Money"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/increaseMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="ثبت واریز"
                android:textColor="@color/black"
                android:textSize="35sp" />


            <com.example.holyquran.ui.NumberTextInputEditText
                android:id="@+id/increaseEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginTop="50dp"
                android:hint="amount" />

            <Button
                android:onClick="@{() -> increaseMoneyViewModel.increaseMoney()}"
                android:layout_width="match_parent"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content"
                android:text="تایید" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <Button
                android:id="@+id/decreaseBtn"
                android:layout_width="match_parent"
                android:onClick="@{() -> increaseMoneyViewModel.gotToDecreaseMoney()}"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="واریز به حساب" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginTop="35sp"
              android:layoutDirection="ltr"

              android:layout_height="wrap_content"
              android:orientation="vertical">

            <TextView
                android:id="@+id/userMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{transaction.increase}"
                android:textColor="@color/black"
                android:gravity="center"
                tools:text="باقی مانده حساب" />

          </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
