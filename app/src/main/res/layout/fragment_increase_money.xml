<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userName"
            type="com.example.holyquran.data.model.UserInfo" />
    <variable
        name="increaseMoneyViewModel"
        type="com.example.holyquran.ui.userList.increaseMoney.IncreaseMoneyViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        tools:context=".ui.userList.increaseMoney.IncreaseMoneyFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{userName.fullName}"
                android:textColor="@color/black"
                android:textSize="35sp"
                tools:text="UserName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{userName.mobileNumber}"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="UserName" />

            <TextView
                android:id="@+id/increaseMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="ثبت واریز"
                android:textColor="@color/black"
                android:textSize="35sp" />


            <EditText
                android:id="@+id/increaseEDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="amount" />

            <Button
                android:id="@+id/finishBtn"
                android:layout_width="match_parent"
                android:text="تایید"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تراکنش ها"
                android:textColor="@color/black"
                android:textSize="25sp" />



          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="برداشت از حساب"
              android:layout_marginTop="100dp"
              android:id="@+id/decreaseBtn"/>


        </LinearLayout>
    </LinearLayout>
</layout>
