<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.holyquran.ui.mainPage.MainPageFragment"
        android:label="صفحه اصلی"
        tools:layout="@layout/fragment_main_page">
        <action
            android:id="@+id/action_mainPageFragment_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.holyquran.ui.userList.UserListFragment"
        tools:layout="@layout/fragment_user_list"
        android:label="UserListFragment" >

        <action
            android:id="@+id/action_userListFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />
        <action
            android:id="@+id/action_userListFragment_to_popupWindowFragment"
            app:destination="@id/popupWindowFragment" />
        <action
            android:id="@+id/action_userListFragment_to_userOptionsFragment"
            app:destination="@id/userOptionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.example.holyquran.ui.addUser.AddUserFragment"
        android:label="AddUserFragment"
        tools:layout="@layout/fragment_add_user">
        <action
            android:id="@+id/action_addUserFragment_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>
    <fragment
        android:id="@+id/popupWindowFragment"
        android:name="com.example.holyquran.ui.userList.popupWindow.PopupWindowFragment"
        android:label="fragment_popop_window"
        tools:layout="@layout/fragment_popop_window" />

    <fragment
        android:id="@+id/userOptionsFragment"
        tools:layout="@layout/fragment_user_options"
        android:name="com.example.holyquran.ui.userList.userOptions.UserOptionsFragment"
        android:label="UserOptionsFragment" >

        <argument
            android:name="userId"
            app:argType="long" />
    </fragment>

</navigation>